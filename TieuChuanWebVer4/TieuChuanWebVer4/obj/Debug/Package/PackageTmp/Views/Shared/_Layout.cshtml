</head>

<body>
    @*@Html.Partial("HeaderPartialView")*@
    @Html.DevExpress().Panel(settings =>
{
    settings.Name = "HeaderPanel";
    settings.FixedPosition = PanelFixedPosition.WindowTop;
    //settings.FixedPosition = PanelFixedPosition.None;
    //settings.SettingsCollapsing.ExpandEffect = PanelExpandEffect.PopupToTop;
    settings.Collapsible = true;
    settings.SettingsAdaptivity.CollapseAtWindowInnerWidth = 900;
    settings.SetContent(() =>
    {
        Html.RenderPartial("HeaderPartial");
    });
}).GetHtml()
   @* ----------------Left-------------------*@
        @Html.DevExpress().Panel(settings =>
   {
       settings.Name = "Content";
       settings.FixedPosition = PanelFixedPosition.None;
       settings.SettingsCollapsing.ExpandEffect = PanelExpandEffect.Auto;
       settings.Width = Unit.Percentage(100);
       settings.Height = Unit.Percentage(100);
       settings.ScrollBars = ScrollBars.Auto;
       settings.ControlStyle.BackColor = System.Drawing.Color.Transparent;
       settings.SetContent(() =>
       {

           ViewContext.Writer.Write(@RenderBody());
       });
   }).GetHtml()
       @*// @Html.Partial("FooterPartial")*@
    @*@RenderBody()*@
    @Html.DevExpress().Panel(settings =>
{
    settings.Name = "FooterPanel";
    settings.FixedPosition = PanelFixedPosition.WindowBottom;
    //settings.FixedPosition = PanelFixedPosition.None;
    //settings.SettingsCollapsing.ExpandEffect = PanelExpandEffect.PopupToBottom;
    settings.Collapsible = false;
    settings.SettingsAdaptivity.CollapseAtWindowInnerWidth = 900;
    settings.SetContent(() =>
    {
        Html.RenderPartial("FooterPartial");
    });
}).GetHtml()
</body>
</html>